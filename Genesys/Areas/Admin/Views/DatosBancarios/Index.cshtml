@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="texto-morado">Lista de Datos Bancarios</h2>
    </div>

    <div class="col-lg-6">
        <a class="btn btn-outline-morado" asp-action="Upsert"> <i class="bi bi-plus-square-fill"></i>Crear Nuevo Dato Bancario</a>
    </div>

    <br />

    <div class="p-4 border rounded bg-light">
        <div class="table-responsive">
            <table id="tblDatos" class="table table-responsive table-hover">
                <thead class="table-morada">
                    <tr>
                        <th>IdDatosBancarios</th>
                        <th>Nombre Banco</th>
                        <th>Número de Cuenta</th>
                        <th>Clabe Interbancaria</th>
                        <th>Préstamos</th>
                        <th>Empleado</th>
                        <th>Status del dato bancario</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

    @section Scripts{
        <script src="~/js/datosBancarios.js"></script>
    }


