@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="texto-morado">Lista de Usuarios</h2>
    </div>

    <div class="col-lg-6">
        <a class="btn btn-outline-morado" asp-area="Identity" asp-page="/Account/Register"> <i class="bi bi-plus-square-fill"></i>Crear Nuevo Usuario</a>
        <a class="btn btn-outline-morado" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-return-left"></i> Volver al inicio</a>
    </div>

    <br />

    <div class="p-4 border rounded bg-light">
        <div class="table-responsive">
            <table id="tblDatos" class="table table-responsive table-hover">
                <thead class="table-morada">
                    <tr>
                        <th>Email</th>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Role</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/usuario.js"></script>
    }


